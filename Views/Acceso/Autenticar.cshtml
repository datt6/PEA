@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        body {
            font-family: Verdana, sans-serif;
            background-image: url('https://img.goodfon.com/original/1920x1200/9/e7/city-night-bridge-gorod-noch.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-color: #121212;
            color: #121212;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            background: #1e1e1e;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            width: 300px;
        }

            .login-container h2 {
                margin-bottom: 30px;
                font-size: 24px;
                text-align: center;
                color: #e0e0e0;
            }

            .login-container label {
                display: block;
                margin-bottom: 8px;
                font-weight: bold;
                color: #e0e0e0;
            }

            .login-container input {
                width: 92%;
                padding: 10px;
                margin-bottom: 10px;
                border: 1px solid #ff8400;
                border-radius: 4px;
                background-color: #2c2c2c;
                color: #e0e0e0;
            }

                .login-container input::placeholder {
                    color: #aaa;
                }

            .login-container button {
                width: 100%;
                padding: 20px;
                margin-bottom: 10px;
                border: none;
                border-radius: 4px;
                background-color: #007bff;
                color: #fff;
                font-size: 16px;
                cursor: pointer;
            }

                .login-container button:hover {
                    background-color: #0056b3;
                }

            .login-container .message {
                text-align: center;
                margin-top: 10px;
                color: #e0e0e0;
            }

                .login-container .message a {
                    color: #ff8400;
                }

                    .login-container .message a:hover {
                        text-decoration: underline;
                    }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Iniciar sesión</h2>
        <form action="@Url.Action("Autenticar","Acceso")" method="post">
            <label for="username">E-mail</label>
            <input type="text" id="correo" name="correo" placeholder="Introduce tu correo" required>

            <label for="password">Contraseña</label>
            <input type="password" id="clave" name="clave" placeholder="Introduce tu contraseña" required>

            <button type="submit" value="Login">Iniciar sesión</button>
        </form>
        <div class="message">  

            <p>¿No tienes cuenta para registro ? <a href="/register">Regístrate aquí</a></p>
        </div>
    </div>
</body>
</html>